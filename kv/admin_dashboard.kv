<RegistrationScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: [40, 60, 40, 40]  # [left, top, right, bottom]
        spacing: 20

        # Background Image with Transparent Overlay
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # Default color in case image doesn't load
            Rectangle:
                source: 'assets/loginbg.jpg'  # Path to your image
                pos: self.pos
                size: self.size
            Color:
                rgba: 1, 1, 1, 0.3  # Very light transparent white overlay
            Rectangle:
                pos: self.pos
                size: self.size

        # Form Container with Semi-Transparent Dark Background
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.6, 0.7  # Shrinks form width and height
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            padding: [20, 30, 20, 30]
            spacing: 15
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.85  # Semi-transparent black background
                RoundedRectangle:
                    pos: self.x + 10, self.y + 10  # Adds margin inside the container
                    size: self.width - 20, self.height - 20  # Shrinks the dark area
                    radius: [20, 20, 20, 20]  # Rounded corners

            Label:
                text: 'Register'
                font_size: '32sp'
                bold: True
                color: 1, 1, 1, 1  # White text
                size_hint_y: None
                height: '50dp'

            Label:
                text: 'Create your account'
                font_size: '16sp'
                color: 0.7, 0.7, 0.7, 1  # Grayish white
                size_hint_y: None
                height: '30dp'

            # Input Fields
            TextInput:
                id: first_name
                hint_text: 'First Name'
                multiline: False
                font_size: '16sp'
                background_color: 0.1, 0.1, 0.1, 1  # Darker input background
                foreground_color: 1, 1, 1, 1  # White text
                cursor_color: 1, 1, 1, 1
                size_hint: None, None
                size: 280, 50  # Slightly narrower width
                pos_hint: {"center_x": 0.5}

            TextInput:
                id: last_name
                hint_text: 'Last Name'
                multiline: False
                font_size: '16sp'
                background_color: 0.1, 0.1, 0.1, 1
                foreground_color: 1, 1, 1, 1
                cursor_color: 1, 1, 1, 1
                size_hint: None, None
                size: 280, 50
                pos_hint: {"center_x": 0.5}

            TextInput:
                id: email
                hint_text: 'Email'
                multiline: False
                font_size: '16sp'
                background_color: 0.1, 0.1, 0.1, 1
                foreground_color: 1, 1, 1, 1
                cursor_color: 1, 1, 1, 1
                size_hint: None, None
                size: 280, 50
                pos_hint: {"center_x": 0.5}

            TextInput:
                id: mobile
                hint_text: 'Mobile'
                multiline: False
                font_size: '16sp'
                background_color: 0.1, 0.1, 0.1, 1
                foreground_color: 1, 1, 1, 1
                cursor_color: 1, 1, 1, 1
                size_hint: None, None
                size: 280, 50
                pos_hint: {"center_x": 0.5}

            TextInput:
                id: password
                hint_text: 'Password'
                multiline: False
                password: True
                font_size: '16sp'
                background_color: 0.1, 0.1, 0.1, 1
                foreground_color: 1, 1, 1, 1
                cursor_color: 1, 1, 1, 1
                size_hint: None, None
                size: 280, 50
                pos_hint: {"center_x": 0.5}

            TextInput:
                id: confirm_password
                hint_text: 'Confirm Password'
                multiline: False
                password: True
                font_size: '16sp'
                background_color: 0.1, 0.1, 0.1, 1
                foreground_color: 1, 1, 1, 1
                cursor_color: 1, 1, 1, 1
                size_hint: None, None
                size: 280, 50
                pos_hint: {"center_x": 0.5}

            # Register Button
            Button:
                text: 'Register'
                font_size: '18sp'
                bold: True
                background_normal: ''
                background_color: 0.8, 0, 0, 1  # Netflix-style red button
                color: 1, 1, 1, 1  # White text
                size_hint: None, None
                size: 280, 50
                pos_hint: {"center_x": 0.5}
                on_press: root.register_user()

            Label:
                text: 'Already have an account? Login here.'
                font_size: '14sp'
                color: 0.7, 0.7, 0.7, 1
                size_hint_y: None
                height: '30dp'
                pos_hint: {"center_x": 0.5} 