<AdminYoutubeScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1  # Full black background
            Rectangle:
                pos: self.pos
                size: self.size

        # Back Button
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            padding: dp(10)
            Button:
                text: "Back"
                size_hint: None, None
                size: dp(100), dp(40)
                background_color: (1, 0, 0, 1)  # Red color
                color: (1, 1, 1, 1)  # White text
                on_press: root.go_back()

        # Content Layout
        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(20)
            padding: dp(10)

            # Left Box (Have to Issue)
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.5
                padding: dp(20)
                spacing: dp(20)
                canvas.before:
                    Color:
                        rgba: 0.2, 0.2, 0.2, 1  # Dark grey background
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]

                Label:
                    text: "Have to Issue"
                    font_size: dp(20)
                    bold: True
                    color: (1, 0, 0, 1)  # Red text

                Label:
                    text: "Select a Plan"
                    font_size: dp(16)
                    color: (1, 0, 0, 1)

                Label:
                    text: "4 per team"
                    font_size: dp(14)
                    color: (1, 1, 1, 1)

                BoxLayout:
                    spacing: dp(10)
                    size_hint_y: None
                    height: dp(50)
                    Button:
                        text: "Monthly Plan"
                        background_color: (1, 0, 0, 1)
                        color: (1, 1, 1, 1)
                        on_press: root.navigate_to_plan("Monthly Plan")

                    Button:
                        text: "Yearly Plan"
                        background_color: (1, 0, 0, 1)
                        color: (1, 1, 1, 1)
                        on_press: root.navigate_to_plan("Yearly Plan")

            # Right Box (Expiring Soon)
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.5
                padding: dp(20)
                spacing: dp(20)
                canvas.before:
                    Color:
                        rgba: 0.2, 0.2, 0.2, 1  # Dark grey background
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10]

                Label:
                    text: "Expiring Soon"
                    font_size: dp(20)
                    bold: True
                    color: (1, 0, 0, 1)

                Label:
                    text: "Select a Plan"
                    font_size: dp(16)
                    color: (1, 0, 0, 1)

                BoxLayout:
                    spacing: dp(10)
                    size_hint_y: None
                    height: dp(50)
                    Button:
                        text: "Monthly Plan"
                        background_color: (1, 0, 0, 1)
                        color: (1, 1, 1, 1)
                        on_press: root.navigate_to_plan("Monthly Plan Expiring")

                    Button:
                        text: "Yearly Plan"
                        background_color: (1, 0, 0, 1)
                        color: (1, 1, 1, 1)
                        on_press: root.navigate_to_plan("Yearly Plan Expiring")
